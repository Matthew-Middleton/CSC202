/**This program is designed to log the keys of a keyboard.
 * Algorithm:
 */
package keylogger;
import java.io.*;
import java.util.Random;
//need to add a method if there already exists a file and maybe create a random fileName generator
public class KeyLogger
{
	@SuppressWarnings("unused")
	private Random rand = new Random(System.currentTimeMillis());
	private String data;
	private FileWriter fileWrite = null;
	private String fileName;// = "logged.dat";
	
	public KeyLogger()
	{
		
	}
	
	public KeyLogger(String keysLogged)
	{
		this.data = keysLogged;
	}
	/**Logs keys and translates them into a stream to store in a binary data file
	 * Exceptions handled
	 * @param data
	 */
	public void takeStream(String data)
	{
		fileName = randFileName();
		if(new File(fileName).exists()==true)
		try
		{
			fileWrite = new FileWriter(new File(fileName), true);
			fileWrite.write(data);
		}
		catch(FileNotFoundException fnf)
		{	
		}
		catch(IOException io)
		{
		}
	}
	/**Creates a randomly named fileName
	 * @return
	 */
	private String randFileName()
	{
		
		return fileName;
	}
	/**Sets the data to be input into a stream
	 * @param keysLogged
	 */
	public void setData(String keysLogged)
	{
		this.data = keysLogged;
	}
	/**Returns
	 * @return
	 */
	public String getData()
	{
		return data;
	}
}
