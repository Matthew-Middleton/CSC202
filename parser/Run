/****************************************************\
 * Purpose: To run the program to be used in the main
 */
package parser;
import java.util.Scanner;
import java.util.LinkedList;
import my_exceptions.UnbalancedException;

public class Run
{
	private Scanner input = new Scanner(System.in);
	
	public Run()
	{
		
	}
	
	private String greeting()
	{
		return "Enter an expression with infix format.\nEnter \"exit\" to stop the program.";
	}
	/**Implements runner()
	 */
	public void run()
	{
		System.out.println(greeting());
		runner();
	}
	/**Holds the routines for the program; to be called by run
	 */
	private void runner()
	{
		String expression = input.nextLine();
		if(expression.equalsIgnoreCase("exit"))
		{
			System.exit(0);
			System.out.println("ENDING PROGRAM");
		}
		InfixParser inp = new InfixParser(expression);
		try
		{
			if(inp.isBalanced(expression))
			{
				LinkedList<String> list = inp.parse();
				System.out.println("Post-fix format:");
				for(int i=0; i<list.size(); i++)
					System.out.print(list.get(i));
				System.out.println();
				System.out.println("Enter another expression:");
				runner();
			}
			else
			{
				throw new UnbalancedException();
			}
		}
		catch(UnbalancedException unbalanced)
		{
			System.out.println(unbalanced.getMessage());
			runner();
		}
	}
}
